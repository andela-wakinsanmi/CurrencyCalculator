<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/nigeria"
        android:id="@+id/spinnerImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NGN"
        android:id="@+id/spinnerCodeView"
        android:layout_toRightOf="@id/spinnerImageView"
        android:layout_alignBottom="@id/spinnerImageView"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nigeria"
        android:id="@+id/spinnerCountryView"
        android:layout_toRightOf="@id/spinnerImageView"
        android:layout_above="@id/spinnerCodeView"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="4dp"/>

</RelativeLayout>